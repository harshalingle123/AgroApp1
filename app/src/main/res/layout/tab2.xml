<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/crops">

    <ImageButton
        android:id="@+id/addcrops"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/crops_info"
        android:layout_marginTop="40dp"
        android:background="@drawable/circular_button"
        android:onClick="addCrops"
        android:src="@drawable/profile" />

    <ImageButton
        android:id="@+id/dises_solution"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addcrops"
        android:layout_marginEnd="47dp"
        android:background="@drawable/circular_button"
        android:onClick="cropDesiesSolution"
        android:src="@drawable/profile" />

    <ImageButton
        android:id="@+id/crop_shop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dises_solution"
        android:layout_marginBottom="79dp"
        android:background="@drawable/circular_button"
        android:onClick="cropShop"
        android:src="@drawable/profile" />

    <ImageButton
        android:id="@+id/market"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="207dp"
        android:background="@drawable/circular_button"
        android:onClick="market"
        android:src="@drawable/profile" />

    <ImageButton
        android:id="@+id/financial"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/market"
        android:background="@drawable/circular_button"
        android:onClick="financial"
        android:src="@drawable/profile" />

    <ImageButton
        android:id="@+id/crops_info"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/market"
        android:layout_marginBottom="71dp"
        android:background="@drawable/circular_button"
        android:onClick="cropsInfo"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="158dp"
        android:text="Add Crops" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginEnd="36dp"
        android:text="Crop Dises Solution" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/addcrops"
        android:layout_alignTop="@+id/textView6"
        android:text="List Of Market" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dises_solution"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="218dp"
        android:text="Financial Help" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/addcrops"
        android:layout_marginBottom="37dp"
        android:text="Crops Information" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/textView7"
        android:text="Online Crops Shops" />


</RelativeLayout>